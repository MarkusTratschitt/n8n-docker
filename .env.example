# ─────────────────────────────────────────────────────────────
# Basic Authentication Settings (recommended for local dev)
# ─────────────────────────────────────────────────────────────

# Enables basic HTTP authentication
N8N_BASIC_AUTH_ACTIVE=true

# Username for login (e.g. in browser prompt)
N8N_BASIC_AUTH_USER=admin

# Password for login (choose something secure!)
N8N_BASIC_AUTH_PASSWORD=supersecret

# ─────────────────────────────────────────────────────────────
# Cookie Security Settings
# ─────────────────────────────────────────────────────────────

# Use secure cookies (only over HTTPS)
# Disable this for local development without HTTPS (e.g. Safari won't work otherwise)
N8N_SECURE_COOKIE=false

# ─────────────────────────────────────────────────────────────
# Timezone & Locale
# ─────────────────────────────────────────────────────────────

# Set the server timezone
TZ=Europe/Berlin

# ─────────────────────────────────────────────────────────────
# Host & Port Configuration
# ─────────────────────────────────────────────────────────────

# Hostname used for generating callback URLs, webhook URLs, etc.
N8N_HOST=localhost

# Port n8n will listen on inside the container (external is mapped via docker-compose)
N8N_PORT=5678

# ─────────────────────────────────────────────────────────────
# (Optional) Webhook Tunnel (used with e.g. n8n.cloud)
# ─────────────────────────────────────────────────────────────

# Uncomment if you want to expose your local instance over the internet
# N8N_TUNNEL_SUBDOMAIN=my-n8n-subdomain

# ─────────────────────────────────────────────────────────────
# (Optional) Execution settings
# ─────────────────────────────────────────────────────────────

# Max number of simultaneous workflow executions
# EXECUTIONS_PROCESS_MAX=10
